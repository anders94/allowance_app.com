extends layout

block content
  .container
        .card
          .card-header
            h2.card-text The #{family.moniker} Family
          .card-body
            p Join the #{family.moniker} family by filling out the fields below.
            form(method='POST', action='/family/invite')
              input(type='hidden', name='familyID', value=family.id)
              .form-floating.mb-3
                input#name.form-control(type='text', name='name', placeholder='Your Name', required)
                label(for='name') Your Name
                .invalid-tooltip We need a name for you!
              .form-floating.mb-3
                input#email.form-control(type='email', name='email', placeholder='name@example.com', required)
                label(for='email') Email Address
                .invalid-tooltip Please enter a valid email address.
              .form-floating.mb-3
                input#password.form-control(type='password', name='password', placeholder='Password', required)
                label(for='password') Password
                .invalid-tooltip Enter a password to secure your account.
              .form-floating
                button.btn.btn-primary.float-end(type='submit') Join
          .card-footer
            | &nbsp;
